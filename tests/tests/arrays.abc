void f(int[4] x)
{
    $assert(x[0] == 42);
    $assert(x[1] == -500);
    $assert(x[2] == 30000);
    $assert(x[3] == 0);
}

void main()
{
    $debug_break();
    
    u16[4] n = { 1, 2, 3, 4 };
    $assert(n[0] == 1);
    $assert(n[1] == 2);
    $assert(n[2] == 3);
    $assert(n[3] == 4);
    n = { 5, 6, 7, 8 };
    $assert(n[0] == 5);
    $assert(n[1] == 6);
    $assert(n[2] == 7);
    $assert(n[3] == 8);
    n = { 0x10001, 0x10002, 0x10003, 0x10004 };
    $assert(n[0] == 1);
    $assert(n[1] == 2);
    $assert(n[2] == 3);
    $assert(n[3] == 4);
    
    f({ 42, -500, 30000, 0 });
    
    $debug_break();
}
