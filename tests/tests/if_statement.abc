void test_logical_and(bool a, bool b, bool result)
{
    bool t = false;
    if(a && b) t = true;
    $assert(t == result);
}

void test_logical_or(bool a, bool b, bool result)
{
    bool t = false;
    if(a || b) t = true;
    $assert(t == result);
}

