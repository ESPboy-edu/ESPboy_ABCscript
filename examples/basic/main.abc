constexpr font f = font{ 6 "font.ttf" };

void setup()
{
}

void loop()
{
    while(!$next_frame())
        ;
    
    $draw_text_P(0, 0, f, "Hello World!");
    
    char[30] buf;
    $format(buf, "Running for %u seconds", $millis() / 1000);
    $draw_text(0, 6, f, buf);
    
    $display();
}

void main()
{
    setup();
    loop();
}

